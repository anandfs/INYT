@model INYTWebsite.CustomModels.RatingModel

@{
    ViewData["Title"] = "Rate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    <!--
    /* STAR RATINGS */

    .ratings div > span:first-of-type {
        display: inline-block;
        vertical-align: middle;
        width: 150px;
