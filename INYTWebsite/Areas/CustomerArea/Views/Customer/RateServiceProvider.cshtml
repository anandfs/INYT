<!-- Page Content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <p>
                    Please rate the sevices provided by your service provider.
                    By providing these ratings, we will be able to better serve you......
                </p>
                <br />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="app-content ratings">                    
                    <form class="ratings" asp-controller="Customer" asp-action="SubmitRatings"
                          id="closeRateServiceProviders">
                        <input type="hidden" asp-for="customerId" />
                        <div class="stars">
                            <span>Rate your service provider:</span>
                            <span class="starRating">
                                <input id="ratingScoreCommunication5" type="radio" asp-for="ratings" value="5">
                                <label for="ratingScoreCommunication5">5</label>
                                <input id="ratingScoreCommunication4" type="radio" asp-for="ratings" value="4">
                                <label for="ratingScoreCommunication4">4</label>
                                <input id="ratingScoreCommunication3" type="radio" asp-for="ratings" value="3">
                                <label for="ratingScoreCommunication3">3</label>
                                <input id="ratingScoreCommunication2" type="radio" asp-for="ratings" value="2">
                                <label for="ratingScoreCommunication2">2</label>
                                <input id="ratingScoreCommunication1" type="radio" asp-for="ratings" value="1">
                                <label for="ratingScoreCommunication1">1</label>
                            </span>
                        </div>
                        <div class="tac">
                            <span>Please provide any other feedback (optional):</span>
                            @Html.TextAreaFor(a => a.ratingComments)
                        </div>
                        <br />
                        <div class="tac">
                            <button type="submit">Submit review</button>
                        </div>
                        @Html.HiddenFor(a => a.customerId)
                        @Html.HiddenFor(a => a.bookingId)
                    </form>

                </div>
            </div>
        </div>

    </div>

</div>
<!-- /Page Content -->
