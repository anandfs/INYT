@model List<INYTWebsite.CustomModels.RatingModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Breadcrumb -->
<div class="breadcrumb-bar">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-12 col-12">
                <nav aria-label="breadcrumb" class="page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                    </ol>
                </nav>
                <h2 class="breadcrumb-title">Dashboard</h2>
            </div>
        </div>
    </div>
</div>
<!-- /Breadcrumb -->
<!-- Page Content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 col-lg-3 col-xl-3 theiaStickySidebar">

                <!-- Profile Sidebar -->
                @{
                    await Html.RenderPartialAsync("AdminSideBar", Model);
                }
                <!-- /Profile Sidebar -->

            </div>

            <div class="row">
                <div class="col-md-12">
                    <h4><strong>Ratings</strong></h4>
                    <div class="appointment-tab">
                        <div class="table-responsive table-primary">
                            <table class="table table-hover table-center mb-0">
                                <thead>
                                    <tr>
                                        <th>
                                            Service provider Name
                                        </th>
                                        <th>
                                            Customer Name
                                        </th>
                                        <th>
                                            Average Rating Score
                                        </th>
                                    </tr>
                                </thead>
                                @if ((Model != null) && (Model.Count() > 0))
                                {
                                    foreach (var rating in Model)
                                    {
                                        <tbody>
                                            <tr>
                                                <td>@String.Format("{0} {1}", rating.serviceprovider.firstName, rating.serviceprovider.lastName) </td>
                                                <td>@String.Format("{0} {1}", rating.customer.firstName, rating.customer.lastName) </td>
                                                <td>
                                                    @if (rating.ratings > 0)
                                                    {
                                                        for (int k = 0; k < rating.ratings; k++)
                                                        {
                                                            <img src="~/images/star-on2.svg" alt="" />
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <img src="~/images/star-off2.svg" alt="">
                                                    }
                                                </td>
                                            </tr>
                                        </tbody>
                                    }
                                }
                                else
                                {
                                    <tbody>
                                        <tr>
                                            <td colspan="7">No ratings found</td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>                            
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Page Content -->
<!-- Sticky Sidebar JS -->
