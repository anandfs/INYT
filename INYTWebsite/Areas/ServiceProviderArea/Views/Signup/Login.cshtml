@model INYTWebsite.Models.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Service Provider Login form-->
<section id="contact_information">
    <div class="container">
        <div class="row">
            <!--Left Form Part-->
            <div class="col-md-8 offset-md-2">

                <!-- Login Tab Content -->
                <div class="account-content">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-md-7 col-lg-6 login-left">
                            <img src="assets/img/login-banner.png" class="img-fluid" alt="INYT Login">
                        </div>
                        <div class="col-md-12 col-lg-6 login-right">
                            <div class="login-header">
                                <h3>Login </h3>
                            </div>
                            <form asp-action="loginprocess" asp-controller="signup" method="post">
                                <div class="form-group form-focus">
                                    <input asp-for="userName" type="email" class="form-control floating" placeholder="Enter email address...">
                                    <span class="validation-error" asp-validation-for="userName"></span>
                                    <label class="focus-label">Email</label>
                                </div>
                                <div class="form-group form-focus">
                                    <input asp-for="password" type="password" class="form-control floating" placeholder="Enter password...">
                                    <span class="validation-error" asp-validation-for="password"></span>
                                    <label class="focus-label">Password</label>
                                </div>
                                <div class="text-right">
                                    <a class="forgot-link" href="forgot-password.html">Forgot Password ?</a>
                                </div>
                                <button class="btn btn-primary btn-block btn-lg login-btn" type="submit">Login</button>
                                <div class="text-center dont-have">Don’t have an account? <a href="register.html">Register</a></div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- /Login Tab Content -->

            </div>
            <!--/Left Form Part-->
        </div>
    </div>
</section>
<!--Service Provider Login End-->
