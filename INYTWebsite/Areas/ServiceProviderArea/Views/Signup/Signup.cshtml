@inject Microsoft.Extensions.Options.IOptions<AppSettings> appSettings
@model INYTWebsite.CustomModels.ServiceProviderModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var AppSettings = appSettings.Value;
}

<!-- Page Content -->
<div class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-8 offset-md-2">

                <!-- Register Content -->
                <div class="content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="login-header">
                                <h3>Service Provider Registration</h3>
                            </div>
                            <form asp-action="signupprocess" asp-controller="signup" method="post">
                                <!-- Basic Information -->
                                <div class="card" style="background-color: aliceblue">
                                    <div class="card-body">
                                        <h4 class="card-title">Membership Information</h4>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Select Membership<span class="text-danger">*</span></label>
                                                    @Html.DropDownListFor(a => a.membershipId, Model.memberships, new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                        <h4 class="card-title">Basic Information</h4>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>First Name <span class="text-danger">*</span></label>
                                                    <input asp-for="firstName" type="text" required class="form-control floating"
                                                           placeholder="Enter first name...">
                                                </div>
                                                <div class="form-group">
                                                    <label>Last Name <span class="text-danger">*</span></label>
                                                    <input asp-for="lastName" type="text" required class="form-control floating"
                                                           placeholder="Enter last name...">
                                                </div>
                                                <div class="form-group">
                                                    <label>Email <span class="text-danger">*</span></label>
                                                    <input asp-for="emailAddress" type="email" required class="form-control floating"
                                                           placeholder="Enter email address...">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Phone Number</label>
                                                    <input asp-for="contactNumber" type="text" class="form-control floating"
                                                           placeholder="Enter contact number...">
                                                </div>
                                                <div class="form-group">
                                                    <label>Password <span class="text-danger">*</span></label>
                                                    <input asp-for="password" type="password" required class="form-control floating"
                                                           placeholder="Enter password...">
                                                </div>
                                                <div class="form-group">
                                                    <label>Confirm Password<span class="text-danger">*</span></label>
                                                    <input asp-for="repeatPassword" type="password" class="form-control floating"
                                                           placeholder="Confirm password...">
                                                </div>
                                            </div>
                                        </div>
                                        <h4 class="card-title">Service Information</h4>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Service Name<span class="text-danger">*</span></label>
                                                    @Html.DropDownListFor(a => a.serviceId, Model.services, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Service Description</label>
                                                    <textarea asp-for="description" class="form-control" cols="4" rows="5"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <h4 class="card-title">Company Information</h4>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Company Number</label>
                                                    <input asp-for="companyNumber" type="text" class="form-control floating"
                                                           placeholder="Enter company number...">
                                                </div>
                                                <div class="form-group">
                                                    <label>Company Name<span class="text-danger">*</span></label>
                                                    <input asp-for="companyName" required type="text" class="form-control floating"
                                                           placeholder="Enter company name...">
                                                </div>
                                                <div class="form-group">
                                                    <label>Is VAT Registered?<span class="text-danger">*</span></label>
                                                    Yes
                                                    @Html.RadioButtonFor(model => model.isVATRegistered, true)
                                                    No
                                                    @Html.RadioButtonFor(model => model.isVATRegistered, false)
                                                    <input asp-for="VATNumber" type="text" class="form-control floating"
                                                           placeholder="Enter VAT Number (if applicable)...">
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label">City</label>
                                                    <input asp-for="city" type="text" class="form-control floating"
                                                           placeholder="Enter city..." />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Address Line 1</label>
                                                    <input asp-for="addressLine1" type="text" class="form-control floating"
                                                           placeholder="Enter 1st line of address...">
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label">Address Line 2</label>
                                                    <input asp-for="addressLine2" type="text" class="form-control floating"
                                                           placeholder="Enter 2nd line of address...">
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label">Postal Code</label>
                                                    <input asp-for="postcode" type="text" class="form-control floating"
                                                           placeholder="Enter post code..." />

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
