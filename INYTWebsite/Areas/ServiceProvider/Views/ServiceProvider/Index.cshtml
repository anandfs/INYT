@model INYTWebsite.Models.ServiceProviderModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Service Provider Sign Up form-->
<section id="contact_information">
    <div class="container">
        <div class="row">
            <!--Left Form Part-->
            <div class="col-md-8 col-sm-8 col-xs-12">
                <div class="booking_form">
                    <div class="container-fluid">
                        <div class="row">
                            <h2>Service Provider Sign Up</h2>
                            <p>Please fill in this form to create an account!</p>
                        </div>
                        <div class="row">
                            <form asp-area="ServiceProvider" asp-controller="Home" asp-action="Signup"
                                  id="signupForm" method="post">

                                <!-- Personal information-->
                                <h2>Personal Information</h2>
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    <div class="input-group">
                                        <span class="validation-error" asp-validation-for="firstName"></span>
                                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                        <input asp-for="firstName" type="text" class="form-control" placeholder="First Name">
                                    </div>
                                </div>
                                <div class="form-group col-md-6 col-sm-6 col-xs-12 padding-r">
                                    <div class="input-group">
                                        <span class="validation-error" asp-validation-for="lastName"></span>
                                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                        <input asp-for="lastName" type="text" class="form-control" placeholder="Last Name">
                                    </div>
                                </div>
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    <div class="input-group">
                                        <span class="validation-error" asp-validation-for="emailAddress"></span>
                                        <span class="input-group-addon"><i class="fa fa-paper-plane"></i></span>
                                        <input asp-for="emailAddress" type="text" class="form-control" placeholder="Email Address">
                                    </div>
                                </div>
                                <div class="form-group col-md-6 col-sm-6 col-xs-12 padding-r">
                                    <div class="input-group">
                                        <span class="validation-error" asp-validation-for="contactNumber"></span>
                                        <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                                        <input asp-for="contactNumber" type="text" class="form-control" placeholder="Contact Number">
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <hr />

                                <!--Company Details-->
                                <h2>Company Details</h2>
                                <div class="form-group col-md-8 col-sm-8 col-xs-12 ">
                                    <div class="input-group">
                                        <span class="validation-error" asp-validation-for="companyName"></span>
                                        <span class="input-group-addon"><i class="fa fa-building"></i></span>
                                        <input asp-for="companyName" type="text" class="form-control" placeholder="Company Name">
                                    </div>
                                </div>
                                <div class="form-group col-md-4 col-sm-4 col-xs-12 padding-r">
                                    <div class="input-group">
                                        <span class="validation-error" asp-validation-for="companyNumber"></span>
                                        <span class="input-group-addon"><i class="fa fa-building"></i></span>
                                        <input asp-for="companyNumber" type="text" class="form-control" placeholder="Company Number">
                                    </div>
                                </div>
                                <div class="form-group col-md-4 col-sm-4 col-xs-12">
                                    <div class="input-group">
                                        <span class="validation-error" asp-validation-for="companySize"></span>
                                        <span class="input-group-addon"><i class="fa fa-users"></i></span>
                                        <input asp-for="companySize" type="text" class="form-control" placeholder="Company Size">
                                    </div>
                                </div>
                                <div class="form-group col-md-4 col-sm-4 col-xs-12 padding-r">
                                    <div class="input-group">
                                        <span class="validation-error" asp-validation-for="addressLine1"></span>
                                        <span class="input-group-addon"><i class="fa fa-location-arrow"></i></span>
                                        <input asp-for="addressLine1" type="text" class="form-control" placeholder="Address First Line">
                                    </div>
                                </div>
                                <div class="form-group col-md-4 col-sm-4 col-xs-12 padding-r">
                                    <div class="input-group">
                                        <span class="validation-error" asp-validation-for="addressLine2"></span>
                                        <span class="input-group-addon"><i class="fa fa-location-arrow"></i></span>
                                        <input asp-for="addressLine2" type="text" class="form-control" placeholder="Second Line of address">
                                    </div>
                                </div>
                                <div class="form-group col-md-4 col-sm-4 col-xs-12 padding-r">
                                    <div class="input-group">
                                        <span class="validation-error" asp-validation-for="city"></span>
                                        <span class="input-group-addon"><i class="fa fa-location-arrow"></i></span>
                                        <input asp-for="city" type="text" class="form-control" placeholder="City">
                                    </div>
                                </div>
                                <div class="form-group col-md-4 col-sm-4 col-xs-12 padding-r">
                                    <div class="input-group">
                                        <span class="validation-error" asp-validation-for="region"></span>
                                        <span class="input-group-addon"><i class="fa fa-location-arrow"></i></span>
                                        <input asp-for="region" type="text" class="form-control" placeholder="Region">
                                    </div>
                                </div>
                                <div class="form-group col-md-4 col-sm-4 col-xs-12 padding-r">
                                    <div class="input-group">
                                        <span class="validation-error" asp-validation-for="postcode"></span>
                                        <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
                                        <input asp-for="postcode" type="text" class="form-control" placeholder="Postcode">
                                    </div>
                                </div>
                                <div class="form-group col-md-4 col-sm-4 col-xs-12 padding-r">
                                    <div class="input-group">
                                        <span class="validation-error" asp-validation-for="website"></span>
                                        <span class="input-group-addon"><i class="fa fa-globe"></i></span>
                                        <input asp-for="website" type="text" class="form-control" placeholder="Company Website">
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <hr />
                                <!-- Password Details-->
                                <h2>Password Details</h2>
                                <div class="form-group col-md-8 col-sm-8 col-xs-12 ">
                                    <div class="input-group">
                                        <span class="validation-error" asp-validation-for="password"></span>
                                        <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                        <input asp-for="password" type="text" class="form-control" placeholder="Password">
                                    </div>
                                </div>
                                <div class="form-group col-md-4 col-sm-4 col-xs-12 padding-r">
                                    <div class="input-group">
                                        <span class="validation-error" asp-validation-for="repeatPassword"></span>
                                        <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                        <input asp-for="repeatPassword" type="text" class="form-control" placeholder="Repeat Password">
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <hr />
                                <div class="form-group col-md-12 col-sm-12 col-xs-12 padding-r center">
                                    <button type="submit" class="btn btn-primary btn-lg">Sign Up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!--/Left Form Part-->

            <!--Right Form Part-->
            <div class="col-md-4 col-sm-4 col-xs-12">
                <div class="row">
                    <h3>Already signed up?</h3>
                    <span><a asp-area="ServiceProvider" 
                            asp-controller="ServiceProvider" 
                            asp-action="Login">Login</a></span>
                </div>
            </div>
            <!--Right Form Part-->
        </div>
    </div>
</section>
<!--Service Provider Sign up End-->


