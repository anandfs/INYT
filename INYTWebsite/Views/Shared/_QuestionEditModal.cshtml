@model INYTWebsite.CustomModels.ServiceProviderAdditionalQuestionsModel

<div class="modal-header">
    <h5 class="modal-title">Edit Question</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form asp-action="updatequestion" asp-controller="serviceprovider" method="post">
        <div class="hours-info">
            <div class="row form-row hours-cont">
                <div class="col-12 col-md-10">
                    <div class="row form-row">
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label>Additional Question</label>
                                <input asp-for="@Model.additionalQuestion" class="form-control" placeholder="Additional Question" />
                            </div>
                            <div class="form-group">
                                <label>Answer Options (separate by comma)</label>
                                <input asp-for="@Model.answerOptions" class="form-control" placeholder="Answer options" />
                            </div>
                            <div class="form-group">
                                <label>Answer Option Type</label>
                                <select asp-for="@Model.answerOptionType" class="form-control">
                                    <option>-</option>
                                    <option>textarea</option>
                                    <option>radio</option>
                                    <option>checkbox</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="submit-section text-center">
            <button type="submit" class="btn btn-primary submit-btn">Save Changes</button>
        </div>
        @Html.HiddenFor(a => a.id)
        @Html.HiddenFor(a => a.serviceProviderId)

    </form>
</div>