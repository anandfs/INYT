    <script>
        $('#add_time_slot').on('show.bs.modal', function (event) {
            var myVal = $(event.relatedTarget).data('dayofweek');
            $(".modal-body #dayofweek").val(myVal);
        });

        $('#edit_time_slot').on('show.bs.modal', function (event) {
            var element = $(event.relatedTarget);
            var modal = $(this);

            modal.find('.modal-content-replace').html("");
            modal.find('.sk-spinner').show();

            $.ajax({
                type: "GET",
                url: element.data("url"),
                success: function (data) {
                    modal.find('.sk-spinner').hide();

                    data = data.replace(/&#xD;&#xA;&#x2022;/g, "<br>&#x2022;");

                    modal.find('.modal-content-replace').html(data);
                }
            });
        });
    </script>


