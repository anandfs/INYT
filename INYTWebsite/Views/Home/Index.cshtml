<section id="dropdown-buttons-with-arrow">
    <div class="row">
        <div class="col-12">
            <form asp-action="Search" asp-controller="Home" enctype="multipart/form-data" method="post" id="searchServiceProviders">
                <div class="card">
                    <!-- TAGLINE -->
                    <div class="card-header">
                        <h1 class="card-title">whose time do you need today?</h1>
                    </div>
                    <div class="card-body">
                        <div class="card-content">
                            <div class="row" tabindex="1">
                                <div class="col-sm-3 col-6">
                                    <div class="heading-elements">
                                        <fieldset>
                                            <select class="form-control" id="basicSelect">
                                                <option>I need a ....</option>
                                                <option>Plumber</option>
                                                <option>Electrician</option>
                                                <option>Carpenter</option>
                                                <option>Dog walker</option>                                                
                                            </select>
                                        </fieldset>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <fieldset class="form-group position-relative has-icon-left">
                            <input type="text" class="form-control round mb-1" id="iconLeft10"
                                   placeholder="Where do you need? (Enter postcode)">
                            <div class="form-control-position">
                                <i class="feather icon-map-pin warning"></i>
                            </div>
                        </fieldset>
                        <div class="form-group">
                            <input class="btn btn-primary btn-min-width mr-1 mb-1" type="submit" value="Submit">
                        </div>
                    </div>
                </div>
            </form>
            <!-- helpr TEXT -->
        </div>
    </div>
